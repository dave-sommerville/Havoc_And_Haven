@model List<Havoc_And_Haven.Models.Battle>

<h2>Battles</h2>

<table class="table">
    <thead>
        <tr>
            <th>Incident Begin Date</th>
            <th>Winner</th>
            <th>Crisis Event</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Battle battle in Model)
        {
            <tr>
                <td>@battle.IncidentBegan.ToShortDateString()</td>
                <td>@battle.Winner</td>
                <td>@battle.CrisisEvent.Title</td>
                <td>
                    <a href="/Battle/Details/@battle.BattleId">View</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@battle.BattleId" />
                        <button type="submit">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<button type="button" onclick="window.location.href='/Battle/Create'">Create</button>

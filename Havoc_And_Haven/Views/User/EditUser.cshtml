@model Havoc_And_Haven.Models.Users

<h2>Edit User</h2>

<form asp-action="EditUser" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="mb-3">
        <label asp-for="FirstName" class="form-label">First Name</label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LastName" class="form-label">Last Name</label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Alias" class="form-label">Alias</label>
        <input asp-for="Alias" class="form-control" />
        <span asp-validation-for="Alias" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="OriginStory" class="form-label">Origin Story</label>
        <textarea asp-for="OriginStory" class="form-control" rows="3"></textarea>
        <span asp-validation-for="OriginStory" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Role" class="form-label">Role</label>
        <select asp-for="Role" class="form-control">
            <option value="">-- Select Role --</option>
            <option value="Hero" selected="@((Model.Role == "Hero").ToString().ToLower())">Hero</option>
            <option value="Villain" selected="@((Model.Role == "Villain").ToString().ToLower())">Villain</option>
            <option value="Admin" selected="@((Model.Role == "Admin").ToString().ToLower())">Admin</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PowerLevel" class="form-label">Power Level</label>
        <input asp-for="PowerLevel" class="form-control" />
        <span asp-validation-for="PowerLevel" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HeadquartersId" class="form-label">Headquarters</label>
        <select asp-for="HeadquartersId" class="form-control">
            <option value="">-- Select Headquarters --</option>
            @foreach (Havoc_And_Haven.Models.Headquarters hq in ViewBag.Headquarters)
            {
                <option value="@hq.HeadquartersId" selected="@(hq.HeadquartersId == Model.HeadquartersId)">
                    @hq.BaseTitle
                </option>
            }
        </select>
        <span asp-validation-for="HeadquartersId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LairId" class="form-label">Lair</label>
        <select asp-for="LairId" class="form-control">
            <option value="">-- Select Lair --</option>
            @foreach (Havoc_And_Haven.Models.Lair lair in ViewBag.Lairs)
            {
                <option value="@lair.LairId" selected="@(lair.LairId == Model.LairId)">
                    @lair.BaseTitle
                </option>
            }
        </select>
        <span asp-validation-for="LairId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model IEnumerable<Havoc_And_Haven.Models.Users>

@{
    ViewData["Title"] = "Users List";
}

<h1>Users List</h1>

<a asp-action="AddUser" class="btn btn-primary mb-3">Create New User</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Alias</th>
            <th>Role</th>
            <th>Power Level</th>
            <th>Headquarters</th>
            <th>Lair</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Havoc_And_Haven.Models.Users user in Model)
        {
            <tr>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Alias</td>
                <td>@user.Role</td>
                <td>@user.PowerLevel</td>
                <td>@user.Headquarters?.BaseTitle</td>
                <td>@user.Lair?.BaseTitle</td>
                <td>
                    <a asp-action="ViewProfile" asp-route-id="@user.UserId" class="btn btn-info btn-sm">View</a>
                    <a asp-action="EditUser" asp-route-id="@user.UserId" class="btn btn-warning btn-sm">Edit</a>
                    <form asp-action="DeleteUserConfirmed" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@user.UserId" />
                        <button type="submit" class="button">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
